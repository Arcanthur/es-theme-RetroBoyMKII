<theme>
	<formatVersion>4</formatVersion>
	<include>./../RetroBoyMKII.xml</include>

	<view name="system">
		<image name="logo">
			<path>./system.png</path>
		</image>
		<image name="console_overlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.32</pos>
			<origin>0.5 0.5</origin>
			<path>./console.png</path>
		</image>
	</view>	
	
  	<view name="detailed, video">
                <image name="system" extra="true">
                   <origin>0.0 0.0</origin>
                   <pos>0.0 0.0</pos>
				   <rotation>0</rotation>
                   <path>./logo.png</path>
                   <zIndex>3</zIndex>            
                </image>
	</view>	
  	<view name="basic">
                <image name="system" extra="true">
                   <origin>0.5 0</origin>
                   <pos>0.5 0.02</pos>
                   <maxSize>1 .12</maxSize>
                   <path>./system.png</path>
                   <zIndex>3</zIndex>            
                </image>
	</view>		
</theme>
